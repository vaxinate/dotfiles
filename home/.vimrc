set nocompatible
filetype off
filetype plugin indent on    " required
set noswapfile
set number
set nowrap
set hlsearch
set tabstop=2 shiftwidth=2 expandtab
set guifont=Fantasque\ Sans\ Mono:h18
set list listchars=trail:.
set colorcolumn=80
set foldmethod=indent

nnoremap <Leader>n :NERDTreeToggle<CR>

syntax enable
set background=dark
